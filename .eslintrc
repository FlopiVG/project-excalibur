{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["react", "jsx-a11y", "import"],
  "globals": {
    "React": true
  },
  "rules": {
    "react/prop-types": [
      2,
      {
        "ignore": ["children"]
      }
    ],
    "linebreak-style": [0],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "react/jsx-no-undef": [2, { "allowGlobals": true }]
  }
}
